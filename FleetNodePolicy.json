{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SQSConsumeAndOptionallySend",
            "Effect": "Allow",
            "Action": [
                "sqs:ReceiveMessage",
                "sqs:DeleteMessage",
                "sqs:ChangeMessageVisibility",
                "sqs:GetQueueAttributes",
                "sqs:GetQueueUrl",
                "sqs:SendMessage"
            ],
            "Resource": "arn:aws:sqs:ap-northeast-1:YOUR_ACCOUNT_ID:fleet-missions"
        },
        {
            "Sid": "DynamoDBStateAndBudget",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DescribeTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:ap-northeast-1:YOUR_ACCOUNT_ID:table/fleet-mission-state",
                "arn:aws:dynamodb:ap-northeast-1:YOUR_ACCOUNT_ID:table/fleet-budget"
            ]
        },
        {
            "Sid": "S3ReadWriteFleetArtifacts",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::YOUR_BUCKET_NAME",
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "tickets/*",
                        "results/*",
                        "status/*"
                    ]
                }
            }
        },
        {
            "Sid": "S3PutGetObjects",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::YOUR_BUCKET_NAME/tickets/*",
                "arn:aws:s3:::YOUR_BUCKET_NAME/results/*",
                "arn:aws:s3:::YOUR_BUCKET_NAME/status/*"
            ]
        },
        {
            "Sid": "BedrockInvokeModels",
            "Effect": "Allow",
            "Action": [
                "bedrock:InvokeModel",
                "bedrock:InvokeModelWithResponseStream"
            ],
            "Resource": [
                "arn:aws:bedrock:ap-northeast-1::foundation-model/anthropic.claude-3-5-sonnet-20240620-v1:0",
                "arn:aws:bedrock:ap-northeast-1::foundation-model/anthropic.claude-3-opus-20240229-v1:0",
                "arn:aws:bedrock:ap-northeast-1::foundation-model/amazon.nova-micro-v1:0",
                "arn:aws:bedrock:ap-northeast-1::foundation-model/amazon.nova-lite-v1:0",
                "arn:aws:bedrock:ap-northeast-1::foundation-model/mistral.mistral-7b-instruct-v0:2"
            ]
        }
    ]
}