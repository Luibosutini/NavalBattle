{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SQSConsumeAndOptionallySend",
            "Effect": "Allow",
            "Action": [
                "sqs:ReceiveMessage",
                "sqs:DeleteMessage",
                "sqs:ChangeMessageVisibility",
                "sqs:GetQueueAttributes",
                "sqs:GetQueueUrl",
                "sqs:SendMessage"
            ],
            "Resource": "arn:aws:sqs:ap-northeast-1:249033470572:fleet-missions"
        },
        {
            "Sid": "DynamoDBStateAndBudget",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:Scan",
                "dynamodb:DescribeTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:ap-northeast-1:249033470572:table/fleet-mission-state",
                "arn:aws:dynamodb:ap-northeast-1:249033470572:table/fleet-budget",
                "arn:aws:dynamodb:ap-northeast-1:249033470572:table/fleet-task-state"
            ]
        },
        {
            "Sid": "S3ReadWriteFleetArtifacts",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::fleet-tokyo-artifacts-1a9c4e",
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "tickets/*",
                        "missions/*",
                        "results/*",
                        "status/*"
                    ]
                }
            }
        },
        {
            "Sid": "S3PutGetObjects",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::fleet-tokyo-artifacts-1a9c4e/tickets/*",
                "arn:aws:s3:::fleet-tokyo-artifacts-1a9c4e/missions/*",
                "arn:aws:s3:::fleet-tokyo-artifacts-1a9c4e/results/*",
                "arn:aws:s3:::fleet-tokyo-artifacts-1a9c4e/status/*"
            ]
        },
        {
            "Sid": "BedrockInvokeInferenceProfiles",
            "Effect": "Allow",
            "Action": [
                "bedrock:InvokeModel",
                "bedrock:InvokeModelWithResponseStream"
            ],
            "Resource": [
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/jp.anthropic.claude-sonnet-4-5-20250929-v1:0",
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/global.anthropic.claude-opus-4-6-v1",
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/apac.amazon.nova-micro-v1:0",
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/apac.amazon.nova-lite-v1:0"
            ]
        },
        {
            "Sid": "BedrockGetInferenceProfiles",
            "Effect": "Allow",
            "Action": [
                "bedrock:GetInferenceProfile"
            ],
            "Resource": [
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/jp.anthropic.claude-sonnet-4-5-20250929-v1:0",
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/global.anthropic.claude-opus-4-6-v1",
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/apac.amazon.nova-micro-v1:0",
                "arn:aws:bedrock:ap-northeast-1:249033470572:inference-profile/apac.amazon.nova-lite-v1:0"
            ]
        },
        {
            "Sid": "BedrockInvokeFoundationModelsForProfiles",
            "Effect": "Allow",
            "Action": [
                "bedrock:InvokeModel",
                "bedrock:InvokeModelWithResponseStream"
            ],
            "Resource": [
                "arn:aws:bedrock:ap-northeast-1::foundation-model/anthropic.claude-sonnet-4-5-20250929-v1:0",
                "arn:aws:bedrock:ap-northeast-3::foundation-model/anthropic.claude-sonnet-4-5-20250929-v1:0",
                "arn:aws:bedrock:ap-northeast-1::foundation-model/anthropic.claude-opus-4-6-v1",
                "arn:aws:bedrock:ap-northeast-3::foundation-model/anthropic.claude-opus-4-6-v1",
                "arn:aws:bedrock:*::foundation-model/anthropic.claude-opus-4-6-v1"
            ]
        },
        {
            "Sid": "BedrockListFoundationModels",
            "Effect": "Allow",
            "Action": [
                "bedrock:ListFoundationModels"
            ],
            "Resource": "*"
        },
        {
            "Sid": "BedrockMarketplaceSubscription",
            "Effect": "Allow",
            "Action": [
                "aws-marketplace:ViewSubscriptions",
                "aws-marketplace:Subscribe"
            ],
            "Resource": "*"
        },
        {
            "Sid": "CloudWatchLogsWrite",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:DescribeLogStreams"
            ],
            "Resource": [
                "arn:aws:logs:ap-northeast-1:249033470572:log-group:/aws/fleet-node",
                "arn:aws:logs:ap-northeast-1:249033470572:log-group:/aws/fleet-node:log-stream:*"
            ]
        }
    ]
}
